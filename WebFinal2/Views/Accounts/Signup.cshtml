@model WebFinal2.Models.Users
@{
    ViewBag.Title = "Зарегистрироваться";
}

<div class="container">
    <div class="wrapper">
        <!-- Форма для входа на сайт  -->
        <div class="col-xs-6 about-content animate__animated  animate__fadeInLeft">
            <h1 class="headline about-header">
                Регистрация
            </h1>
            <div class="registerLink">
                <button type="button" class="registerLinkButton order_text">
                    @Html.ActionLink("ВОЙТИ", "Login", "Accounts", null, new { @class = "actionlink" })
                </button>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Логин", htmlAttributes: new { @class = "control-label col-md-2 " })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "re-call-input" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                    <div class="form-group">
                        @Html.Label("Пароль", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.UserPassword, new { htmlAttributes = new { @class = "re-call-input" } })
                            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="РЕГИСТРАЦИЯ" class="input send order_text" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>