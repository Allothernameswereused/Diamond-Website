@{
    ViewBag.Title = "Установка окон в Екатеринбурге";
}

<!-- Блок представления с картинкой на фоне -->
<section class="introduction animate__animated  animate__fadeInLeft">
    <div class="container introcontent">
        <img src="~/Content/img/background.jpg" class="intro_photo" />
        <p class="introtext">Установка и ремонт пластиковых окон в Екатеринбурге и Свердловской области</p>
        <!-- Форма заказа обратного звонка, находится в углу -->
        <div class="call_order">
            <p class="input_title title-big">Ваше имя</p>
            <p class="input_title title-big phone_title">Ваш телефон</p>
            <form action="#" class="call_engineer">
                <p class="input_title title-big spacing">Закажите обратный звонок!</p>
                <div class="spacing">
                    <br />
                </div>
                <input type="text" class="input" name="name" placeholder="Алексей" id="name" required>
                <div class="spacing">
                    <br />
                </div>
                <input type="tel" class="input phone-input" name="phone" id="phone" placeholder="х-xxx-xxx-xx-хx" pattern="\d{1}[-]\d{3}[-]\d{3}[-]\d{3}[-]\d{3}" required>
                <div class="spacing">
                    <br />
                </div>
                <input type="submit" class="input send" value="ЗАКАЗАТЬ ЗВОНОК">
            </form>
        </div>
    </div>
</section>
<!-- Блоки преимуществ -->
<section class="advantages">
    <div class="container">
        <h1 class="headline">
            Наши преимущества
        </h1>
        <h1 class="subheadline">
            Почему стоит обратиться к нам?
        </h1>
        <div class="advent_content">
            <div class="advent-block">
                <h1 class="advent-header">Бесплатный выезд мастера</h1>
                <p class="advent-text advent_short">Мастер может приехать в течение 1-2 часов после оставления заявки</p>
            </div>
            <div class="advent-block">
                <h1 class="advent-header">Качественные материалы</h1>
                <p class="advent-text">Мы используем только качественные стеклопакеты и алюминиевые конструкции собственного производства</p>
            </div>
            <div class="advent-block">
                <h1 class="advent-header">Рассрочка 0%</h1>
                <p class="advent-text advent_short">Заказывайте нашу продукцию в рссрочку до 24 месяцев без переплаты и первоначального взноса</p>
            </div>
        </div>
    </div>
</section>
<!-- Форма вызова инженера -->
<section class="engineer">
    <div class="container">
        <div class="wrapper">
            <!-- Левая колонка, поля формы -->
            <div class="col-xs-6 col-md-6 engineer-half animate__animated  animate__fadeInLeft">
                <h1 class="form-header">Хотите узнать точную стоимость? Запишитесь на бесплатный замер!</h1>
                <form action="#" class="engineer-call">
                    <input type="text" class="alt-input" name="name" placeholder="ВАШЕ ИМЯ" required>
                    <input type="text" class="alt-input" name="tel" placeholder="ВАШ ТЕЛЕФОН" required>
                    <input type="text" class="alt-input" name="address" placeholder="ВАШ АДРЕС" required>
                    <div>
                        <span id="order-engineer" class="alt-send">
                            <p class="button-txt">Заказать</p>
                        </span>
                    </div>
                </form>
            </div>
            <!-- Правая колонка, изображение -->
            <div class="col-xs-6 col-md-6 engineer-half rightcol animate__animated  animate__fadeInRight">
                <img src="~/Content/img/engineer2.png" class="engineer-image" />
            </div>
        </div>
    </div>
</section>
<!-- Дублёр заголовка страницы с контактными данными  -->
<header id="header" class="header">
    <div class="container">
        <div class="wrapper animate__animated animate__fadeIn">
            <a href="@Url.Action("Index","Home")"><img src="~/Content/img/logo.png" alt="logo" class="logo animate__animated  animate__fadeInLeft" /></a>
            <h1 class="title">
                УСТАНОВКА И РЕМОНТ
                ПЛАСТИКОВЫХ ОКОН
                В ЕКАТЕРИНБУРГЕ
            </h1>
            <h1 class="phone">+7-800-555-35-35</h1>
            <button type="button" class="order btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                <p class="order_text">Заказать обратный звонок</p> <p class="order-text txt2">Звонок</p>
            </button>
        </div>
    </div>
</header>
